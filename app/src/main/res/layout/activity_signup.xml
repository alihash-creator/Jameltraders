<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Signup">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:layout_height="120dp"
        android:layout_marginTop="@dimen/image"
        app:srcCompat="@drawable/logo" />

    <EditText
        android:id="@+id/email"
        style="@style/editTextBackgroundStyle"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@id/imageView"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your Email"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:background="#DAD4D4"
        android:textColorHint="#699498"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="168dp" />
    <EditText
        android:id="@+id/passw"
        style="@style/editTextBackgroundStyle"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@id/email"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your password "
        android:inputType="textPassword"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:background="#DAD4D4"
        android:textColorHint="#699498"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/display"
        style="@style/editTextBackgroundStyle"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@id/passw"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your display name "
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:background="#DAD4D4"
        android:textColorHint="#699498"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/loaction"
        style="@style/editTextBackgroundStyle"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@id/display"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your loaction "

        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:background="#DAD4D4"
        android:textColorHint="#699498"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="168dp" />

    <EditText
        android:id="@+id/number"
        style="@style/editTextBackgroundStyle"
        android:layout_width="334dp"
        android:layout_height="50dp"
        android:layout_below="@id/loaction"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter your number "

        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:background="#DAD4D4"
        android:textColorHint="#699498"
        tools:ignore="RtlCompat"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="168dp" />
    <Button
        android:id="@+id/signup"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonstyling"
        android:text="Signup"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/number"
        android:layout_marginTop="20dp"
        android:textColor="@color/button_white"
        android:textSize="16dp" />
    <LinearLayout
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup"

        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Already have an account?"
            android:textColor="#9b9797"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:text="Login?"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>